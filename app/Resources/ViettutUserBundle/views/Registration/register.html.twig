{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block main %}
    <div class="container">
        <div class="mtop50 mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">{{ 'layout.register' | trans }}</div>
                    <div class="text-right-top">
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login' | trans }}</a>
                    </div>
                </div>
                <div class="panel-body" >

                    <form class="form-horizontal" role="form" action="{{ path("fos_user_registration_register") }}" method="post">
                        {% for error in form.email.vars.errors %}
                            <div class="alert alert-danger text-center">
                                {{ error.message }}
                            </div>
                        {% endfor %}

                        {% for error in form.username.vars.errors %}
                            <div class="alert alert-danger text-center">
                                {{ error.message }}
                            </div>
                        {% endfor %}

                        <div class="form-group">
                            <label for="email" class="col-md-4 control-label">{{ 'form.email' | trans }}</label>
                            <div class="col-md-8">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : 'form.email' | trans , 'required': 'required'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="username" class="col-md-4 control-label">{{ 'form.username' | trans }}</label>
                            <div class="col-md-8">
                                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder' : 'form.username' | trans , 'required': 'required'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-md-4 control-label">{{ 'form.password' | trans }}</label>
                            <div class="col-md-8">
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder' : 'form.password' | trans , 'required': 'required'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-md-4 control-label">{{ 'form.password_confirmation' | trans }}</label>
                            <div class="col-md-8">
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder' : 'form.password_confirmation' | trans , 'required': 'required'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="name" class="col-md-4 control-label">Name</label>
                            <div class="col-md-8">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder' : 'Name' }}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-md-4 control-label">Professional</label>
                            <div class="col-md-8">
                                {{ form_widget(form.professional, {'attr': {'class': 'form-control', 'placeholder' : 'Developer .eg'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <input type="submit" class="btn btn-lg btn-primary" value="{{ 'registration.submit' | trans }}">
                            </div>
                        </div>

                        {{ form_rest(form) }}

                        <div style="border-top: 1px solid #999; padding-top:20px"  class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="button" class="btn btn-primary">Sign Up with Facebook</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


