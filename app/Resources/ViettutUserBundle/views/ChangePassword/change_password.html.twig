{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block main %}
    <div class="container">
        <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 mtop50">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">{{ 'change_password.submit' | trans }}</div>
                    <div class="text-right-top">
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login' | trans }}</a>
                    </div>
                </div>
                <div class="panel-body" >

                    <form class="form-horizontal" role="form" action="{{ path("fos_user_change_password") }}" method="post">
                        {% for error in form.current_password.vars.errors %}
                            <div class="alert alert-danger text-center">
                                {{ error.message }}
                            </div>
                        {% endfor %}
                        {% for error in form.plainPassword.vars.errors %}
                            <div class="alert alert-danger text-center">
                                {{ error.message }}
                            </div>
                        {% endfor %}
                        <div class="form-group">
                            <label for="username" class="col-md-4 control-label">{{ 'form.current_password' | trans }}</label>
                            <div class="col-md-8">
                                {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder' : 'form.current_password' | trans , 'required': 'required'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-md-4 control-label">{{ 'form.new_password' | trans }}</label>
                            <div class="col-md-8">
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder' : 'form.new_password' | trans , 'required': 'required'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-md-4 control-label">{{ 'form.password_confirmation' | trans }}</label>
                            <div class="col-md-8">
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder' : 'form.new_password_confirmation' | trans , 'required': 'required'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <input type="submit" class="btn btn-lg btn-primary" value="{{ 'change_password.submit' | trans }}">
                            </div>
                        </div>

                        {{ form_rest(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


