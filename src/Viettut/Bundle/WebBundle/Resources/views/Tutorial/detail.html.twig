{% extends 'base.html.twig' %}
{% block controller %}ng-controller="TutorialController"{% endblock %}
{% block main %}
    <style>
        textarea {
            width: 100%;
            height: 90%;
        }
    </style>
    <section class="page-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb">
                        <li><a href="{{ path('home_page') }}">Home</a></li>
                        <li class="active"><a href="{{ path('tutorial_index') }}">Hướng dẫn</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="blog-posts single-post">
                        <article class="post post-large blog-single-post">
                            {#<div class="post-date">#}
                                {#<span class="day">{{ tutorial.createdAt | date('d') }}</span>#}
                                {#<span class="month">{{ tutorial.createdAt | date('F') | slice(0, 3) }}</span>#}
                            {#</div>#}
                            <div class="post-content">
                                <h2 class="text-center"><a href="#">{{ tutorial.title }}</a></h2>
                                <div class="post-meta">
                                    <span class="pull-right"><i class="fa fa-user"></i> By <a href="{{ path('lecturer_index', {'username' : tutorial.author.username}) }}">{{ tutorial.author.username }}</a> </span>
                                    <span class="pull-right"><i class="fa fa-tag"></i>
                                        {% for t in tutorial.tutorialTags %}
                                            <a href="{{ path('tag_index', {'tag' : t.tag.text}) }}">{{ t.tag.text }}</a>
                                        {% endfor %}
                                    </span>
                                    <span class="pull-right"><i class="fa fa-comments"></i> <a href="#">{{ tutorial.comments | length }} Comments</a></span>
                                </div>
                                <hr class="tall"/>
                                <textarea class="hidden" id="content" >{{ tutorial.content | raw}}</textarea>
                                <wiz-markdown content="content" class="markdown-body"></wiz-markdown>
                                <div class="row col-md-12" ng-controller="CommentController">
                                    <div class="post-block post-comments clearfix row col-md-12">
                                        <h3 ng-hide="commentToggle"><i class="fa fa-comments"></i>Bình luận ({{ tutorial.comments | length }})</h3>
                                        <h3 ng-if="commentToggle"><i class="fa fa-comments"></i>Bình luận (<{ numberComments }>)</h3>
                                        <ul class="comments" ng-hide="commentToggle">
                                            {% for comment in tutorial.comments %}
                                                <li>
                                                    <div class="comment">
                                                        <div class="img-thumbnail">
                                                            <img class="avatar" alt="avatar" src="{{ comment.author.avatar }}">
                                                        </div>
                                                        <div class="comment-block">
                                                            <div class="comment-arrow"></div>
                                                                <span class="comment-by">
                                                                    <strong>{{ comment.author.username }}</strong>
                                                                    <span class="pull-right">
                                                                        <span> <a href="#"><i class="fa fa-reply"></i> Reply</a></span>
                                                                    </span>
                                                                </span>
                                                            <p>{{ comment.content }}</p>
                                                            <span class="date pull-right">{{ comment.createdAt | date('h:i d/m/Y') }}</span>
                                                        </div>
                                                    </div>
                                                    <ul class="comments reply">
                                                        <li>
                                                            {% for reply in comment.replies %}
                                                                <div class="comment">
                                                                    <div class="img-thumbnail">
                                                                        <img class="avatar" alt="avatar" src="{{ reply.author.avatar }}">
                                                                    </div>
                                                                    <div class="comment-block">
                                                                        <div class="comment-arrow"></div>
                                                                            <span class="comment-by">
                                                                                <strong>{{ reply.author.username }}</strong>
                                                                            </span>
                                                                        <p>{{ reply.content }}</p>
                                                                        <span class="date pull-right">{{ reply.createdAt | date('h:i d/m/Y') }}</span>
                                                                    </div>
                                                                </div>
                                                            {% endfor %}
                                                        </li>
                                                    </ul>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                        <ul class="comments" ng-if="commentToggle">
                                            <li ng-repeat="comment in comments">
                                                <div class="comment">
                                                    <div class="img-thumbnail">
                                                        <img class="avatar" alt="avatar" ng-src="<{ comment.author.avatar }>">
                                                    </div>
                                                    <div class="comment-block">
                                                        <div class="comment-arrow"></div>
                                                                <span class="comment-by">
                                                                    <strong><{ comment.author.username }></strong>
                                                                    <span class="pull-right">
                                                                        <span> <a href="#"><i class="fa fa-reply"></i> Reply</a></span>
                                                                    </span>
                                                                </span>
                                                        <p><{ comment.content }></p>
                                                        <span class="date pull-right"><{ comment.createdAt | date:'yyyy-MM-dd HH:mm:ss' }></span>
                                                    </div>
                                                </div>
                                                <ul class="comments reply">
                                                    <li ng-repeat="reply in comment.replies">
                                                        <div class="comment">
                                                            <div class="img-thumbnail">
                                                                <img class="avatar" alt="avatar" ng-src="<{ comment.author.avatar }>">
                                                            </div>
                                                            <div class="comment-block">
                                                                <div class="comment-arrow"></div>
                                                                        <span class="comment-by">
                                                                            <strong><{ reply.author.username }></strong>
                                                                        </span>
                                                                <p><{ reply.content }></p>
                                                                <span class="date pull-right"><{ reply.createdAt | date:'yyyy-MM-dd HH:mm:ss' }></span>
                                                            </div>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="post-leave-comment">
                                        <h3>Ý kiến</h3>
                                        <div ng-init="currentTutorial={{ tutorial.id }}"></div>
                                        <form>
                                            <div class="row">
                                                <div class="form-group">
                                                    <div class="col-md-12">
                                                        <wiz-markdown-editor content="content" maxlength="5000" rows="10" class="form-control" style="height: 200px;width: 90%;">
                                                        </wiz-markdown-editor>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <button
                                                            ladda-button="laddaLoading"
                                                            data-style="slide-right"
                                                            ng-disabled="!isAuthenticated"
                                                            ng-click="addComment()"
                                                            class="ladda-button btn-primary"
                                                            style="border-radius: 5px;">Đăng</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </article>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                {% include 'sidebar.html' %}
            </div>
        </div>
    </div>
{% endblock %}
{% block custom %}
    <script src="{{ asset('bundles/viettutweb/js/sticky_sidebar.js') }}"></script>
    <script src="{{ asset('bundles/viettutweb/js/controller/tutorial/comment.js') }}"></script>
    <script src="{{ asset('bundles/viettutweb/js/controller/tutorial/detail/tutorial.js') }}"></script>
{% endblock %}