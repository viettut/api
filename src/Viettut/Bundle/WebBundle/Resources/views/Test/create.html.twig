{% extends 'base.html.twig' %}
{% trans_default_domain 'global' %}
{% block controller %}ng-controller="TestController"{% endblock %}
{% block main %}
    <section class="page-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb">
                        <li><a href="{{ path('home_page') }}">Home</a></li>
                        <li class="active"><a href="{{ path('my_tests') }}">{{ 'header.course' | trans }}</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ 'course.create' | trans }}</h1>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form class="form-horizontal" role="form" id="createTest">
                    <div class="form-group">
                        <label for="name">Tiêu đề</label>
                        <input type="text" value="" class="form-control" name="name" id="name" ng-model="name" required/>
                    </div>
                    <div class="form-group">
                        <label for="type">Loại test</label>
                        <select id="type" name="type" ng-model="type">
                            <option value="1" selected="selected">Choice Test</option>
                            <option value="2">Coding Test</option>
                        </select>
                    </div>
                    <div class="form-group" ng-if="type == 2">
                        <label for="language">Chọn ngôn ngữ lập trình</label>
                        <select id="language" name="language" ng-model="language">
                            {% for language in languages %}
                                <option value="{{ language.id }}">{{ language.name}} </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="description">Mô tả câu hỏi</label>
                        <textarea id="description" name="description" ng-model="description"></textarea>
                    </div>

                    <div class="form-group" ng-if="type == 1">
                        <label for="options">Phương án trả lời</label>
                        <div class="col-md-12" ng-repeat="value in options">
                            <div class="col-md-3"><span><{ $index }>. <{ value }></span></div>
                        </div>
                        <div class="col-md-12">
                            <input id="option" class="col-md-8" ng-model="$parent.option" name="option" type="text"/>
                            <button class="col-md-4" ng-click="addOption()">Add Option</button>
                        </div>
                    </div>

                    <div class="form-group" ng-if="type == 2">
                        <label for="initialCode">{{ 'course.create_form.title' | trans }}</label>
                        <textarea id="initialCode" name="initialCode" ng-model="initialCode"></textarea>
                    </div>

                    <div class="form-group" ng-if="type == 1">
                        <label for="expectedResult">Kết quả mong muốn</label>
                        <select ng-options="idx as choice for (idx, choice) in options"></select>
                        {#<select id="expectedResult" name="expectedResult" ng-model="expectedResult" ng-repeat="value in options">#}
                            {#<option value="value.id"><{ value.name }></option>#}
                        {#</select>#}
                    </div>

                    <div class="form-group" ng-if="type == 2">
                        <label for="expectedResult">{{ 'course.create_form.title' | trans }}</label>
                        <input id="code" name="code" ng-model="code" type="text"/>
                        <input id="stdErr" name="stdErr" ng-model="stdErr" type="text"/>
                        <input id="stdOut" name="stdOut" ng-model="stdOut" type="text"/>
                    </div>

                    <div class="form-group" ng-if="type == 2">
                        <label for="image">{{ 'course.create_form.image' | trans }}</label><br>
                        <button type="file" ngf-select="uploadFiles($file)" ngf-max-height="1000" ngf-max-size="1MB" class="btn btn-primary">{{ 'course.create_form.file' | trans }}</button>
                        <div class="alert alert-danger" ng-if="uploadError">
                            <strong>Error !</strong> <{ uploadErrorMsg }>
                        </div>
                        <div ng-if="uploaded" ng-repeat="file in files">
                            <div>
                                <span><{ file.id }></span>
                                <input type="text" id="<{ file.id }>" value="file.name" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group" ng-if="type == 2">
                        <label for="inputData">{{ 'course.create_form.title' | trans }}</label>
                        <textarea id="inputData" name="inputData" ng-model="inputData"></textarea>
                    </div>

                    <div class="form-group" ng-if="type == 2">
                        <label for="serverParameters">{{ 'course.create_form.title' | trans }}</label>
                        <textarea id="serverParameters" name="serverParameters" ng-model="serverParameters"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button ladda-button="laddaLoading" data-style="slide-right" ng-click="create()" class="btn btn-primary border-radius5 ladda-button">{{ 'course.create_form.submit' | trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block custom %}
    <script src="{{ asset('bundles/viettutweb/js/controller/test/create/test.js') }}"></script>
{% endblock %}